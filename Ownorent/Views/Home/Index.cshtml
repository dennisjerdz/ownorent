@{
    ViewBag.Title = "Home Page";
}

@if (ViewBag.Message != null)
{
    <div class="row">
        <div class="col-md-12">
            <br />
            <div class="ownorent-alert alert alert-success">
                @Html.Raw(ViewBag.Message)
            </div>
        </div>
    </div>
}

<div class="main-banner jumbotron" style="background:url(https://images.unsplash.com/photo-1521791136064-7986c2920216?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=60);">
    <h4>JOIN OUR ONLINE SELLING PLATFORM</h4>
    <h1>
        <span>Buy, Rent & Own</span> Products
        <br />
        Make Deals Online
    </h1>
    <p class="lead">Using Our Rent-to-Own Payment Feature.</p>
    <p><a href="@Url.Action("Register","Account")" class="btn btn-success btn-lg">REGISTER NOW!</a></p>
</div>

<div class="row">
    <div class="col-md-3">
        <div class="frontpage-card">
            <i class="icon flaticon-coins"></i>
            <h5>
                RENT-TO-OWN
            </h5>
            <p>Easy Payment Option</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="frontpage-card">
            <i class="icon flaticon-delivery-truck"></i>
            <h5>
                FAST DELIVERY
            </h5>
            <p>On-Time Deliveries</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="frontpage-card">
            <i class="icon flaticon-headphones"></i>
            <h5>
                24/7 Support
            </h5>
            <p>Top Quality Customer Service</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="frontpage-card">
            <i class="icon flaticon-secure-payment"></i>
            <h5>
                SECURE PAYMENTS
            </h5>
            <p>Safe Online Transactions</p>
        </div>
    </div>
</div>