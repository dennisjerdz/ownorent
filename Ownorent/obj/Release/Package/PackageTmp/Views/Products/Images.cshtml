@model Ownorent.Models.ProductTemplate
@using Ownorent.Models;
@{
    ViewBag.Title = "Images";
    ViewBag.bgColor = "#f8fafc";
}

@if (ViewBag.Error != null)
{
    if (ViewBag.Error == "1")
    {
        <div class="row">
            <div class="col-md-12">
                <br />
                <div class="ownorent-alert alert alert-danger">
                    @Html.Raw(ViewBag.Message)
                </div>
            </div>
        </div>
    }
}
else if (ViewBag.Message != null)
{
    <div class="row">
        <div class="col-md-12">
            <br />
            <div class="ownorent-alert alert alert-success">
                @Html.Raw(ViewBag.Message)
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-4">
        <div class="ownorent-panel ownorent-panel-white marginTop15">
            <div class="ownorent-panel-header" style="background-color:#71cd14; color:white;">
                Images
            </div>

            <div class="ownorent-panel-body">
                <div class="row">
                    <div class="col-md-12">
                        @using (Html.BeginForm(null, null, FormMethod.Post, new { @enctype = "multipart/form-data", @class = "form-horizontal" }))
                        {
                            <input name="productId" type="hidden" value="@Model.ProductTemplateId" />

                            <label class="control-label">Name:</label>
                            <input name="name" class="form-control" required/>

                            <label class="control-label">Upload File:</label>
                            <input name="Files" type="file" multiple class="form-control" />
                            <br />
                            if (Model.ProductTemplateStatus == ProductTemplateStatusConstant.REJECTED_NOT_ALLOWED
                                || Model.ProductTemplateStatus == ProductTemplateStatusConstant.REJECTED_NOT_ALLOWED_RETURNED
                                || Model.ProductTemplateStatus == ProductTemplateStatusConstant.REMOVED
                                )
                            {
                                <center>
                                    <p class="text-greyed-out">Product is inactive.</p>
                                </center>
                                <input type="submit" class="btn btn-block btn-primary" value="Submit" disabled />
                            }
                            else
                            {
                                <input type="submit" class="btn btn-block btn-primary" value="Submit" />
                            }

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        @if (ViewBag.VerificationStatus != null)
        {
            <h5 class="marginTop15">Verification Status: <strong>@ViewBag.VerificationStatus</strong></h5>
        }

        <div class="ownorent-panel ownorent-panel-white marginTop15">
            <div class="ownorent-panel-header" style="background-color:#71cd14; color:white;">

            </div>

            <div class="ownorent-panel-body ownorent-panel-table">
                <table class="table table-condensed table-hover">
                    <thead>
                        <tr>
                            <th>
                                FILE
                            </th>
                            <th>
                                DATE CREATED
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @{
                            int i = 1;
                        }
                        @foreach (var item in Model.Attachment)
                        {

                            <tr>
                                <td>@item.Name</td>
                                <td>
                                    @item.DateCreated.ToString("MM-dd-yyyy")
                                </td>
                                <td style="text-align:right;">
                                    <a class="btn btn-xs btn-info" href="@Url.Content("~/Content/Uploads/Images/"+item.Location)" download>Download</a>
                                    @Html.ActionLink("Delete","DeleteImage",new { id = item.ProductTemplateAttachmentId, productId = item.ProductTemplateId }, new { @class="btn btn-xs btn-danger" })
                                </td>
                            </tr>

                            i++;
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            var datatable = $("table").DataTable({
                paging: true,
                "pageLength": 10,
                "dom": "<'table-window'<'table-responsive'rt>><'window-footer'<'col-md-6'i><'col-md-6'p>>",
                "columnDefs": [
                    { "orderable": false, "targets": 2 }
                ]
            });

            $(".all-search").keyup(function () {
                datatable.search($(this).val()).draw();
            })
        });
    </script>
}