@model Ownorent.Models.ProductViewInfoModel
@{
    ViewBag.Title = "_productViewInfo";
}

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">@Model.ProductName</h4>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-7">
                <div class="photo-slider" style="overflow-y:auto; height:330px;">
                    @foreach (var item in Model.Attachments)
                    {
                        <img style="width:100%; display:block; margin-bottom:12px;" src="@Url.Content("~/Content/Uploads/Images/"+item.Location)" />
                    }
                </div>
            </div>

            <div class="col-md-5">
                <h4>@Model.ProductName</h4>
                <hr style="margin:8px;"/>
                <div>@Html.Raw(Model.ProductDescription)</div>
                <hr style="margin:8px;" />
                <p>Sold by:</p>
                <h6>@Model.SellerEmail - @Model.SellerFirstName</h6>
            </div>
        </div>
    </div>

    @*
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    *@
</div>
