@model IEnumerable<Ownorent.Models.ProductTemplate>
@using Ownorent.Models
@using System.Globalization
@{
    ViewBag.Title = "Products";
    ViewBag.bgColor = "#f8fafc";
}

<section id="messages">
    @if (ViewBag.Error != null)
    {
        if (ViewBag.Error == "1")
        {
            <div class="row">
                <div class="col-md-12">
                    <br />
                    <div class="ownorent-alert alert alert-danger">
                        @Html.Raw(ViewBag.Message)
                    </div>
                </div>
            </div>
        }
    }
    else if (ViewBag.Message != null)
    {
        <div class="row">
            <div class="col-md-12">
                <br />
                <div class="ownorent-alert alert alert-success">
                    @Html.Raw(ViewBag.Message)
                </div>
            </div>
        </div>
    }
</section>

<div class="row">
    <div class="col-md-3">
        <div class="ownorent-panel ownorent-panel-white marginTop15">
            <div class="ownorent-panel-header" style="background-color:#71cd14; color:white;">

            </div>

            <div class="ownorent-panel-body ownorent-panel-tools">
                @using (Html.BeginForm("p", "Products", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
                {
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="control-label">Category</label>
                            <select class="form-control category" name="category">
                                @if (ViewBag.CategoriesList != null)
                                {
                                    <option value="">All</option>
                                    foreach (Category c in (List<Category>)ViewBag.CategoriesList)
                                    {
                                        if (Request.Params["category"] == c.CategoryId.ToString())
                                        {
                                            <option value="@c.CategoryId" selected>@c.CategoryName</option>
                                        }
                                        else
                                        {
                                            <option value="@c.CategoryId">@c.CategoryName</option>
                                        }
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="control-label">Keywords</label>
                            <input class="form-control" name="search" value="@Request.Params["search"]"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="submit" class="btn btn-info btn-block" value="Search" />
                        </div>
                    </div>
                }
            </div>
        </div>

        <br />

        <img class="hidden-sm hidden-xs" style="width:100%;" src="https://media.sproutsocial.com/uploads/2018/04/facebook-marketplace-ads.gif" />
    </div>

    <div class="col-md-9">
        <div class="row">
            @{ 
                int productAvailabilityCount = 0;
            }

            @foreach (var item in Model)
            {
                <div class="col-md-3 col-xs-6">
                    <div class="ownorent-product-card marginTop15">
                        <div class="ownorent-product-card-header">
                            @{
                                productAvailabilityCount = item.Products.Count(p => p.ProductStatus == ProductStatusConstant.AVAILABLE);
                            }

                            @if (productAvailabilityCount > 0)
                            {
                                <span class="ownorent-text-ygreen">In Stock</span>
                            }
                            else
                            {
                                <span class="ownorent-text-red">Sold Out</span>
                            }
                        </div>

                        @if (item.Attachment.FirstOrDefault() != null)
                        {
                            <div class="ownorent-product-card-bg-container">
                                <div class="ownorent-product-card-bg" style="background:url('@Url.Content("~/Content/Uploads/Images/"+item.Attachment.FirstOrDefault().Location)')"></div>
                                <div class="ownorent-product-card-img" style="background:url('@Url.Content("~/Content/Uploads/Images/"+item.Attachment.FirstOrDefault().Location)')"></div>
                            </div>
                        }
                        else
                        {
                            <div class="ownorent-product-card-bg-container">
                                <div class="ownorent-product-card-img-no-pic ownorent-bg-silver" style="background:url('https://cdn0.iconfinder.com/data/icons/gray-business-toolbar/512/product-3-512.png')"></div>
                            </div>
                        }

                        <div class="ownorent-product-card-info">
                            <p class="name">@item.ProductName</p>
                            <p class="price">
                                <span class="info">Price:</span>
                                @if (item.ProductPriceToUse == ProductPriceToUseConstant.SELLER_DEFINED_PRICE)
                                {
                                    <text>@item.Price.ToString("C2", CultureInfo.GetCultureInfo("fil-PH"))</text>
                                }
                                else
                                {
                                    if (item.ComputedPrice != null)
                                    {
                                        <text>@item.ComputedPrice.Value.ToString("C2", CultureInfo.GetCultureInfo("fil-PH"))</text>
                                    }
                                    else
                                    {
                                        <text>@item.Price.ToString("C2", CultureInfo.GetCultureInfo("fil-PH"))</text>
                                    }
                                }
                            </p>
                            <p class="price-rent">
                                <span class="info">Daily Rent:</span>
                                @if (item.ProductPriceToUse == ProductPriceToUseConstant.SELLER_DEFINED_PRICE)
                                {
                                    if (item.DailyRentPrice != null)
                                    {
                                        <text>@item.DailyRentPrice.Value.ToString("C2", CultureInfo.GetCultureInfo("fil-PH"))</text>
                                    }
                                    else
                                    {
                                        <span title="No Rent Price Defined">N/A</span>
                                    }
                                }
                                else
                                {
                                    if (item.ComputedDailyRentPrice != null)
                                    {
                                        <text>@item.ComputedDailyRentPrice.Value.ToString("C2", CultureInfo.GetCultureInfo("fil-PH"))</text>
                                    }
                                    else
                                    {
                                        if (item.DailyRentPrice != null)
                                        {
                                            <text>@item.DailyRentPrice.Value.ToString("C2", CultureInfo.GetCultureInfo("fil-PH"))</text>
                                        }
                                        else
                                        {
                                            <span title="No Rent Price Defined">N/A</span>
                                        }
                                    }
                                }
                            </p>

                            @if (productAvailabilityCount > 0)
                            {
                                if (User.Identity.IsAuthenticated)
                                {
                                    if (ViewBag.UserStatus == AccountStatusConstant.APPROVED)
                                    {
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-default btn-block ownorent-dropdown-button dropdown-toggle" type="button" data-toggle="dropdown">
                                                Add to Cart
                                                <span class="caret"></span>
                                            </button>
                                            <ul class="dropdown-menu ownorent-dropdown-menu ownorent-dropdown-menu-right">
                                                <li>@Html.ActionLink("Buy", "AddToCart", new { }, new { @class = "addToCart", data_id = item.ProductTemplateId, data_type = CartTypeConstant.BUY })</li>
                                                <li>@Html.ActionLink("Rent", "AddToCart", new { }, new { @class = "addToCart", data_id = item.ProductTemplateId, data_type = CartTypeConstant.RENT })</li>
                                                <li>@Html.ActionLink("Rent to Own", "AddToCart", new { }, new { @class = "addToCart", data_id = item.ProductTemplateId, data_type = CartTypeConstant.RENT_TO_OWN })</li>
                                            </ul>
                                        </div>
                                    }
                                    else
                                    {
                                        <input type="button" disabled class="btn btn-sm btn-default btn-block btn-warning" value="Verify your Account first" />
                                    }
                                }
                                else
                                {
                                    @Html.ActionLink("Login to Add to Cart","Login","Account",new { }, new { @class="btn btn-sm btn-block btn-warning" })
                                }
                            }
                            else
                            {
                                <input type="button" disabled class="btn btn-sm btn-default btn-block" value="Add to Cart"/>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {

            $(".all-search").keyup(function () {
                datatable.search($(this).val()).draw();
            });

            $(".addToCart").click(function (e) {
                e.preventDefault();

                var id = $(this).data("id");
                var type = $(this).data("type");

                $.ajax({
                    url: '@Url.Action("AddToCart","Products", new { })',
                    data: { id:id,type:type },
                    method: 'POST',
                    dataType: 'json',
                    success: function (s) {

                        if(s.status == 0){
                            var msg =
                            '<div class="row">' +
                                '<div class="col-md-12">' +
                                    '<br />' +
                                    '<div class="ownorent-alert alert alert-danger">' +
                                        s.message +
                                    '</div>' +
                                '</div>' +
                            '</div>';
                        } else {
                            var msg =
                            '<div class="row">' +
                                '<div class="col-md-12">' +
                                    '<br />' +
                                    '<div class="ownorent-alert alert alert-success">' +
                                        s.message +
                                    '</div>' +
                                '</div>' +
                            '</div>';

                            var cartCount = $(".floating-cart span").html();
                            $(".floating-cart span").html(parseInt(cartCount) + 1);
                        }

                        var remove = $(msg).appendTo("#messages");
                        setTimeout(function () {
                            $(remove).fadeOut(1000, function () { });
                        }, 3000);
                    },
                    error: function (e) {
                        alert(s.status + s.message);
                    }
                });
            })
        });
    </script>
}